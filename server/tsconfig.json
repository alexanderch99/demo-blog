{
  "compilerOptions": {
    "target": "es2022", // Указывает версию JavaScript, в которую компилируется TypeScript.
    "module": "nodenext", // Использует модульную систему Node.js с поддержкой ECMAScript Modules (ESM).
    "moduleResolution": "nodenext", // Определяет, как TypeScript будет искать модули. Совместимо с ESM и CommonJS.
    "strict": true, // Включает все строгие проверки типов. Повышает надёжность и безопасность кода.
    "outDir": "./dist", // Папка, куда будут помещены скомпилированные файлы.
    "rootDir": "./src", // Корневая папка исходных файлов TypeScript.
    "esModuleInterop": true, // Упрощает импорт CommonJS модулей
    "forceConsistentCasingInFileNames": true, // Предотвращает проблемы с регистром в путях
    "skipLibCheck": true, // Ускоряет сборку, пропуская проверку типов в node_modules
    "resolveJsonModule": true, // Позволяет импортировать JSON
    "noEmitOnError": true, // Не генерировать dist при ошибках
    "noUnusedLocals": true, // Предупреждать о неиспользуемых переменных
    "noUnusedParameters": false, // Предупреждать о неиспользуемых аргументах
    "noFallthroughCasesInSwitch": true, // Предупреждать о пропущенных break в switch
    "allowSyntheticDefaultImports": true, // Разрешает дефолтные импорты даже без них в модуле
    "isolatedModules": true // Полезно для совместимости с Babel/ESM
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ]
}